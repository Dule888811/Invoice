@model IEnumerable<InvoiceApp.Models.Document>

@{
    ViewBag.Title = "index";
}

<h2>index</h2>

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrojFakture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ukupno)
        </th>
        <th></th>
    </tr>
    @if (Model.Any())
    {
        foreach (var item in Model)
        {

            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrojFakture)
                </td>
                <td>
                    @item.Ukupno.ToString("0.00")
                </td>
                <td>
                    <a href="@Url.Action("Index", "comView", new { id = item.id })">

                        <button>Edit</button>
                    </a>

                    <a href="@Url.Action("Delete", "Documents", new { id = item.id })">

                        <button>Izbrisi</button>
                    </a>
                </td>
                <td></td>
            </tr>
        }
    }


</table>
